<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constraint.ConstraintLayoutActivity">

    <TextView
        android:id="@+id/tv_baseline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="baseline  circle  bias"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/tv_ratio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />


    <TextView
        android:id="@+id/tv_ratio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="goneMargin  ratio"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/tv_flow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_baseline"
        app:layout_constraintVertical_weight="1" />


    <TextView
        android:id="@+id/tv_flow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="flow layer "
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ratio"
        app:layout_constraintVertical_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>